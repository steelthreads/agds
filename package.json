{
  "name": "root",
  "private": true,
  "workspaces": [
    "components/*"
  ],
  "scripts": {
    "build:js": "lerna exec --parallel -- babel --root-mode upward src/ -d lib --extensions .ts,.tsx",
    "clean": "rimraf components/**/lib && rimraf node_modules/",
    "build:types": "lerna exec --parallel tsc",
    "build": "yarn build:js && yarn build:types",
    "bootstrap": "lerna bootstrap --use-workspaces",
    "dev": "start-storybook --no-manager-cache -p 6006",
    "docs": "build-storybook -o ./docs"
  },
  "devDependencies": {
    "@ag.ds/theme": "1.0.0",
    "@babel/cli": "^7.15.7",
    "@babel/core": "^7.15.5",
    "@babel/preset-env": "^7.15.6",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.15.0",
    "@storybook/addon-actions": "^6.3.8",
    "@storybook/addon-docs": "^6.3.8",
    "@storybook/addon-essentials": "^6.3.8",
    "@storybook/addon-links": "^6.3.8",
    "@storybook/react": "^6.3.8",
    "babel-loader": "^8.2.2",
    "lerna": "^4.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.4.3",
    "webpack": "^5.53.0"
  }
}
