{
  "name": "@ag.ds/repo",
  "private": true,
  "version": "0.0.0",
  "homepage": "https://github.com:steelthreads/agds",
  "repository": "https://github.com/steelthreads/agds",
  "license": "MIT",
  "engines": {
    "node": "^14"
  },
  "dependencies": {
    "@babel/core": "^7.15.5",
    "@babel/preset-env": "^7.15.6",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.15.0",
    "@babel/runtime": "^7.15.4",
    "@changesets/cli": "^2.17.0",
    "@emotion/babel-plugin": "^11.3.0",
    "@emotion/eslint-plugin": "^11.2.0",
    "@emotion/react": "^11.4.1",
    "@manypkg/cli": "^0.18.0",
    "@preconstruct/cli": "^2.1.4",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.26.1",
    "prettier": "^2.4.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "postinstall": "yarn preconstruct dev && pancake-to-react && preconstruct build",
    "dev": "manypkg run @ag.ds/storybook dev",
    "build:storybook": "manypkg run @ag.ds/storybook build",
    "build": "preconstruct build",
    "clean": "git clean -xdf",
    "dep:fix": "manypkg fix && preconstruct fix",
    "dep:check": "manypkg check && preconstruct build && preconstruct dev",
    "lint": "eslint . --ext ts,tsx,js",
    "format": "yarn lint --fix",
    "types": "tsc -p tsconfig.all.json",
    "test": "echo \"Error: no test specified\" && exit 0",
    "pkgs:release": "yarn build && changeset publish",
    "pkgs:version": "changeset version"
  },
  "workspaces": [
    "packages/*",
    "storybook",
    "tools/*"
  ],
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  },
  "manypkg": {
    "defaultBranch": "main"
  },
  "pancake": {
    "auto-save": true,
    "plugins": true,
    "ignore": [],
    "json": {
      "enable": false,
      "location": "pancake/",
      "name": "pancake",
      "content": {
        "name": true,
        "version": true,
        "dependencies": true,
        "path": true,
        "settings": true
      }
    },
    "js": {
      "minified": true,
      "modules": false,
      "location": "pancake/js/",
      "name": "pancake.min.js"
    },
    "css": {
      "minified": true,
      "modules": false,
      "browsers": [
        "last 2 versions",
        "ie 8",
        "ie 9",
        "ie 10"
      ],
      "location": "pancake/css/",
      "name": "pancake.min.css"
    },
    "sass": {
      "modules": false,
      "location": "pancake/sass/",
      "name": "pancake.scss"
    },
    "react": {
      "location": "pancake/react/"
    }
  }
}
